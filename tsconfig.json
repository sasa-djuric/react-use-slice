{
	"compilerOptions": {
		"target": "ES2019",
		"outDir": "./lib",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"isolatedModules": true,
		"declaration": true,
		"jsx": "react-jsx"
	},
	"include": ["src"]
}
